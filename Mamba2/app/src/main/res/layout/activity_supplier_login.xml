<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgee"
    tools:context=".SupplierLogin">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:srcCompat="@drawable/kernal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:foregroundGravity="top"
        android:gravity="top"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:id="@+id/Supplier4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/light"
            android:gravity="center"
            android:shadowColor="@color/colorAccent"
            android:layout_gravity="center"
            android:text="Supplier Portal"
            android:textColor="@color/colorAccent"
            android:textSize="34sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center|top"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="0dp"
        android:paddingRight="30dp">

        <TextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#F60303"
            android:drawableRight="@drawable/ic_baseline_close_24"
            android:fontFamily="@font/medium"
            android:foregroundGravity="center"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:shadowRadius="20"
            android:textColor="@android:color/white"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/SupNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttons"
            android:drawableStart="@drawable/ic_baseline_account_circle_24"
            android:drawablePadding="20dp"
            android:ems="10"
            android:fontFamily="@font/light"
            android:hint="Phone number"
            android:inputType="textEmailAddress|phone"
            android:letterSpacing=".1"
            android:paddingLeft="15dp"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="@android:color/darker_gray"
            android:textColorHint="@color/colorAccent"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/SupCooperative"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttons"
            android:drawableStart="@drawable/ic_baseline_account_circle_24"
            android:drawablePadding="20dp"
            android:ems="10"
            android:fontFamily="@font/light"
            android:hint="Cooperative Name"
            android:inputType="text"
            android:letterSpacing=".1"
            android:paddingLeft="15dp"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="@android:color/darker_gray"
            android:textColorHint="@color/colorAccent"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/SupPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttons"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="20dp"
            android:ems="10"
            android:fontFamily="@font/light"
            android:hint="Password"
            android:inputType="textPassword"
            android:letterSpacing=".1"
            android:paddingLeft="15dp"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="@android:color/darker_gray"
            android:textColorHint="@color/colorAccent"
            android:textSize="14sp" />

        <Button
            android:id="@+id/addsupplier"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorAccent"
            android:fontFamily="@font/light"
            android:longClickable="true"
            android:text="Log-in"
            android:textColor="@android:color/background_light"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingTop="20dp">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>