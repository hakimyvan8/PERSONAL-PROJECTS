<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@drawable/backgee"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/signa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="15dp"
        android:layout_marginStart="20dp"
        android:drawableStart="@drawable/ic_back"
        android:fontFamily="@font/light"
        android:gravity="start"
        android:paddingStart="30dp"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:foregroundGravity="top"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@color/softcolor"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="0dp"
            android:paddingRight="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/signa2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/light"
                    android:text="Driver Signin"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/error"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="#F60303"
                android:drawableRight="@drawable/ic_baseline_close_24"
                android:fontFamily="@font/medium"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:shadowRadius="20"
                android:textColor="@android:color/white"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_rect02"
                android:backgroundTintMode="multiply"
                android:drawableStart="@drawable/ic_baseline_local_phone_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:fontFamily="@font/light"
                android:foregroundTint="@color/black"
                android:hint="Phone number"
                android:inputType="textEmailAddress|phone"
                android:letterSpacing=".1"
                android:paddingLeft="15dp"
                android:textColor="@color/colorAccent"
                android:textColorHighlight="@android:color/darker_gray"
                android:textColorHint="@color/colorAccent"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_rect02"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:fontFamily="@font/light"
                android:hint="Password"
                android:inputType="textPassword"
                android:letterSpacing=".1"
                android:paddingLeft="15dp"
                android:textColor="@color/colorAccent"
                android:textColorHighlight="@android:color/darker_gray"
                android:textColorHint="@color/colorAccent"
                android:textSize="14sp" />


            <Button
                android:id="@+id/adduserdriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn"
                android:longClickable="true"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:cornerRadius="30dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:shadowColor="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textSize="8sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>