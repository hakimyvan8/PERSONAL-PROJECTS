<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/detailsRel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/proceedTocart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Add to Cart"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/detailsRel1">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RWF"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@+id/title"
            android:textSize="20dp"
            android:textColor="@color/grey"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:contentPadding="5dp"
            android:background="@color/white"
            app:cardUseCompatPadding="true"
            android:layout_margin="2dp">

            <ImageView
                android:id="@+id/imageprod"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="center"
                android:layout_below="@+id/titleView"
                android:padding="4dp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/hihi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <ImageButton
                android:id="@+id/decrementBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="50dp"
                android:background="@null"
                android:src="@drawable/ic_minus"/>

            <TextView
                android:id="@+id/quantityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

            <ImageButton
                android:id="@+id/incrementBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:background="@null"
                android:src="@drawable/ic_add"/>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/finalprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_below="@+id/main"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="0dp"
        android:text="RWF"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="20dp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/playout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"
        android:layout_below="@+id/finalprice"
        android:layout_marginEnd="10dp">


        <TextView
            android:id="@+id/unistored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Units Stored:"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/qty1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty/"/>

        <TextView
            android:id="@+id/qty2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty"
            android:textColor="@color/red"/>



        <TextView
            android:id="@+id/qtyleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="(Left in Stock)"/>


    </LinearLayout>

    <TextView
        android:id="@+id/prodDesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Product Description"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/playout"
        android:textAlignment="center"/>

</RelativeLayout>